<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/unlock_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/image_container_layout"
            android:layout_width="match_parent"
            android:layout_height="292dp"
            android:background="#EFEFF0">>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_lock" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/password_container_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp">


            <TextView
                android:id="@+id/txtConfig"
                android:layout_width="266dp"
                android:layout_height="273dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="102dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="64dp"
                android:clickable="false"
                android:contextClickable="false"
                android:inputType="textMultiLine"
                android:linksClickable="false"
                android:longClickable="false"
                android:text="Please switch on Accessibility Service of AppLocker in the Setting"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_wrapHeight="160"
                tools:layout_conversion_wrapWidth="982" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>