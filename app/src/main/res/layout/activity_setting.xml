<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SetPasswordActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFF0">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:src="@drawable/ic_back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/btnBack"
            android:layout_toRightOf="@+id/btnBack"
            android:gravity="center"
            android:text="Settings"
            android:textColor="#141212"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp">
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="20dp">-->

        <TextView
            android:id="@+id/txtChangePass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_white_clicked"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Change Password"
            android:textColor="#2c2c2c"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnChangeP"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_foward" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACACA" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp">
        <!--android:paddingLeft="20dp"-->
        <!--android:paddingRight="20dp">-->

        <TextView
            android:id="@+id/txtAboutMe"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_white_clicked"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="More about app"
            android:textColor="#2c2c2c"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/btnInfo"
            android:layout_width="124dp"
            android:layout_height="43dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_foward" />
    </RelativeLayout>

</LinearLayout>